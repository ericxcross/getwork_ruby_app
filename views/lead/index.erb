<a href="/lead/new">Add New Lead</a>

<ul class = "sort">
  <h1>sort by:</h1>
  <li><a href="/lead">due date</a></li>
  <li><a href="/lead/sort-by-status">status</a></li>
  <li><a href="/lead/sort-by-name">alphabetical</a></li>
</ul>

<div class="lead_list">
  <%for lead in @leads%>
    <a href = "/lead/<%=lead.id%>" class="container">
      <div>
        <div class="item_1">
          <h2><%= lead.company_name %></h2>
          <h3><%= lead.name %></h3>
          <p>last updated on <%= lead.word_date %></p>
        </div>
        <div class="item_2">
          <p><%= lead.summary[0,255] %><%=p '...' if lead.summary.length > 255%></p>
        </div>
        <div class="item_3">
          <h3><%= lead.primary_action.status.name%></h3>
          <p><%= lead.primary_action.word_date%></p>
        </div>
      </div>
    </a>
  <%end%>
</div>
