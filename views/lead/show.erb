<div>
  <div class="container">
    <div>
      <h1><%= @company.name %></h1>
      <h2><%= @lead.name %></h2>
    </div>
    <div>
      <h3>Status: <%= @lead.status.name %></h3>
    </div>
  </div>

  <div>
    <h3>Summary</h3>
    <p><%= @lead.summary %></p>

    <div>
