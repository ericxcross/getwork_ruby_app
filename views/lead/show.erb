<div>
  <div class="container">
    <div>
      <h1><%= @lead.company_name %></h1>
      <h2><%= @lead.name %></h2>
    </div>
    <div>
      <h3>Status: <%= @lead.action_status.name %></h3>
      <p><%= @lead.action_date %>
    </div>
  </div>

  <div>
    <h3>Summary</h3>
    <p><%= @lead.summary %></p>

    <div>
      <a href="https://<%=@lead.link %>">Link</a>
      <a href="/lead/<%=@lead.id%>/edit">Edit</a>
    </div>

    <a href="/lead">Back to leads</a>
  </div>
</div>

<div>
  <div class="container">
    <h2>Actions</h2>
    <div>
      <div class="item_1">
        <h2><%=@lead.action_status.name%></h2>
        <h3><%=@lead.action.word_date%></h3>
      </div>

      <div class="item_2">
        <p><%=@lead.action.summary%></p>
      </div>

      <div class="item_3">
        <form action="/lead/action/<%=@lead.action.id%>" method="post">
          <input type = 'hidden' name = 'id' value = <%=@lead.id%>>
          <input type="submit" value= "Delete"/>
        </form>
      </div>
    </div>

    <%for action in @action_log%>
      <div>
        <div class="item_1">
          <h2><%=action.status.name%></h2>
          <input type = 'hidden' name = 'id' value = <%=@lead.id%>>
          <h3>Completed: <%=action.word_date%></h3>
        </div>

        <div class="item_2">
          <p><%=action.summary%></p>
        </div>

        <div class="item_3">
          <form action="/lead/action-log/<%=action.id%>" method="post">
            <input type = 'hidden' name = 'id' value = <%=@lead.id%>>
            <input type="submit" value= "Delete"/>
          </form>
        </div>
      </div>
    <%end%>

  </div>

  <div class="container">
    <form action = "/lead/<%=@lead.id%>/new-action" method="post">

      <label for="action_status">Status</label>
      <select id="status" name="status_id">
        <%for status in @status_list%>
          <option value="<%=status.id%>" <%='selected' if @lead && @lead.action.status_id == (status.id - 1)%>><%=status.name%></option>
        <%end%>
      </select>

      <label for="due_date">Due</label>
      <input type="date" name="due_date">

      <label for = "summary">Summary: </label>
      <textarea name ="summary" rows="4" cols="80"></textarea>

      <input type="submit" value= "New Action"/>
    </form>
  </div>
</div>
